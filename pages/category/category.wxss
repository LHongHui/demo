.nav-box{
  width: 100vw;
  height: 300rpx;
  position: fixed;
  top:0;
  z-index: 999;
  overflow: hidden;
}
.navimg{
  width: 100%;
  z-index: 999;
  background: #fff;
  background: -webkit-linear-gradient(rgba(255,255,255,0),rgba(255,255,255,1));
  background: -moz-linear-gradient(top,rgba(0,0,0,0) 0%,rgba(0,0,0,1) 100%);
  height: 600rpx;
}
.jianbian-box{
  width: 100vw;
  height: 1300rpx;
  position: fixed;
  top: 0;
  z-index: -1;
}
.nav-nav{
  position: fixed;
  top: 70rpx;
  left: 50rpx;
  display: flex;
}
.touxiang{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.touxiang image{
  width: 100%;
  height: 100%;
}
.nav-title{
  display: flex;
  flex-flow: column;
  color: white;
  margin-left: 20rpx;
}
.content-container {
  width: 100vw;
  height: 100%;
  margin-top: 300rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content : center;/*弹性盒子子元素在主轴位置上居中排列*/
}

.category-container {
  width: 90vw;
  height: 100%;
}

.category-container .category,.recommend {
  padding: 20rpx 50rpx;
  height: 100%;
  position: relative;
  background-color:white;
  border-radius: 15rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #515151;
  font-weight: 700;
}
.category .dayuhao{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  top: 25rpx;
  margin-right: 0rpx;
}
.category .tiao,.recommend .tiao{
  width: 10rpx;
  height: 32rpx;
  position: absolute;
  left: 30rpx;
  top: 26rpx;
}
/* 推荐商品样式 */
.recommend-info{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.item{
  width: 48%;
  background: #fff;
  padding:1%;
  margin-bottom: 6rpx;
}
.imgs {
  position: relative;
  padding-top: 100%; /*将图像100%放进父级盒子中*/
  width: 100%;
}
.recommend image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.recommend .title {
  font-size: 26rpx;
  line-height: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  display: -webkit-box;
  text-overflow: -o-ellipsis-lastline;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recommend .price {
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.recommend .price1 {
  color: #f00;
  font: 26rpx JDZhengHT-EN-Regular;
}
.recommend .count {
  font: bold 26rpx arial;
}


.goods-container {
  flex: 1;
  background: #fff;
  min-height: 100%;
}
.goods-container .title {
  text-align: left;
  padding: 10rpx 30rpx;
  color: #515151;
  font-size: 22rpx;
  line-height: 30rpx;
  background: rgba(216, 30, 6, 0.3);
}
.goods-container .goods {
  position: relative;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}

.goods-container .goods .pic {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
}

.goods-container .goods .pic .fresh-tag {
  position: absolute;
  top: 15rpx;
  left: 25rpx;
  width: 60rpx;
  height: 60rpx;
}

.goods-container .goods .name {
  color: #000;
  font-size: 28rpx;
  line-height: 46rpx;
  font-weight: bold;
}

.goods-container .goods .soldInfo {
  display: flex;
  flex-direction: row;
  width: 350rpx;
  align-items: flex-start;
  margin-top: 5rpx;
}

.goods-container .goods .soldInfo .good-price-box {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-end;
  overflow: hidden;
  font-size: 22rpx;
  line-height: 22rpx;
}

.goods-container .goods .soldInfo .good-price-box .price {
  color: #d81e06;
  margin-top: 10rpx;
  width: 120rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.goods-container .goods .soldInfo .good-sales-box {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-end;
  overflow: hidden;
  font-size: 22rpx;
  line-height: 22rpx;
}

.goods-container .goods .soldInfo .good-sales-box .number {
  color: #d81e06;
  padding: 2px;
  border: 1px solid #d81e06;
  border-radius: 5rpx;
}
.ellipsis {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.no-data {
  width: 100%;
  display: flex;
  justify-content: center;/*在弹性盒对象的 <div> 元素中的各项周围留有空白*/
  align-items: center;/*居中对齐弹性盒的各项 <div> 元素*/
  flex-wrap:wrap;
}
.no-data .line {
  width:132rpx;
  height:2rpx;
  background: #999;
}
.no-data .txt {
  font-size:26rpx;
  color:rgba(153,153,153,1);
  margin: 0 16rpx;
}

