/**index.wxss**/
/* 头部导航条 */
.cons{
  padding: 0;
  margin: 0;
}
page{
  width: 100%;
  position: relative;
}
swiper image{
  width: 100%;
}
.logo{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 35px;
  left: 10px;
  border-radius: 50%;
}
.jiayin{
  position: absolute;
  top: 60rpx;
  left:130rpx;
  color:#fff;
  font-size: 18px;
}
.guanzhu{
  color: #fff;
  font-size: 12px;
  position: absolute;
  top:110rpx;
  left:130rpx;
}
.nav{
  display: flex;
  width:60%;
  position: absolute;
  top:170rpx;
  left:-5px;
  font-size: 14px;
}
.nav .title{
  flex: 1;
  text-align: center;
  color: #fff;
}
.nav .cur{
  border-bottom: 2px solid #fff;
}
.cons .desc{
  display: none;
}
.cons .cur{
  display: block;
}
.wxParse-img{
  display: flex;
}
/* 横向滑动效果 */
.bao{
  text-align: center;
  color:black;
}
.page-section-spacing{
  white-space: nowrap;
}
.scroll-view-item_H {
  display: inline-block;
  position: relative;

}
.scroll-view-item_H image{
  width: 50px;
  height: 50px;
  border:1px solid #ccc;
  margin: 20px 30px;
  padding: 5px;
}
.scroll-view-item_H  .title{
  font-size: 12px;
  position: absolute;
  top: 80px;
  left:-2%;
  margin: 4px 20px;
  z-index: 1000;
}

.sign{
  font-size: 20px;
  font-weight: 700;
  color:red;
  margin-left: 155px;
}
.lineheight{
  margin-top: 10px;
  margin-bottom: 10px;
}
.ad{
  display: inline-block;
  height: auto;
}
.gzbtn{
  color: #fff;
  padding: 3px 5px 3px;
  border:1px solid #ccc;
  border-radius: 20px;
  width: 40px;
  text-align: center;
  position: absolute;
  top:50rpx;
  right: 100px;
}



