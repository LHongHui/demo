.guize .content{
  margin-left: 10px;
  padding: 5px;
  font-weight: 400;
}
.recommend{
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.item{
  width: 48%;
  background: #fff;
  padding:1%;
  margin-bottom: 6rpx;
}
.imgs {
  position: relative;
  padding-top: 100%; /*将图像100%放进父级盒子中*/
  width: 100%;
}
.recommend image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.recommend .title {
  font-size: 26rpx;
  line-height: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  display: -webkit-box;
  text-overflow: -o-ellipsis-lastline;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding:0 16rpx;
}
.recommend .price {
  height: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.recommend .price1 {
  color: #f00;
  font: 26rpx JDZhengHT-EN-Regular;
}
.recommend .count {
  font: bold 26rpx arial;
}
.filters{
  margin-left: 5px;
  display: flex;
  white-space: nowrap;
}
.filters .item{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 50%;
  margin:5px 15px;
}
.sousuo{
  width: 100px;
